<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
<div class="row">
  <div class="large-10 large-centered columns formu">
    <div class="row">
      <div class="large-4 columns formu">
        <h2>Email:</h2>
      </div>
      <div class="large-8 columns">
        <%= f.email_field :email, autofocus: true %>
      </div>
    </div>
    
    <div class="row">
      <h3>(leave blank if you don't want to change it)</h3>
      <div class="large-5 columns formu">
        <h2>Password:</h2>
      </div>
      <div class="large-7 columns">
        <%= f.password_field :password, autocomplete: "off" %>
      </div>
    </div>
    
    <div class="row">
      <h3>(we need your current password to confirm your changes)</h3>
      <div class="large-5 columns formu">
        <h2>Confirmation:</h2>
      </div>
      <div class="large-7 columns">
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>
    </div>
    
    <div class="row">
      <div class="actions large-2 large-centered columns">
        <%= f.submit "Update", :class => "button" %>
      </div>
    </div>
  </div> 
</div>
<br>
<br>
<br>
<div class="row">
  <div class="formu large-6 large-centered columns">
    <h2>Cancel my account</h2>
  </div>
</div>
<div class="row">
  <div class="formu large-3 large-centered columns">
    <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => "button" %>
  </div>
</div>
<% end %>
