<div class="row" id="show">
  <% if(!@post.meme.blank?)%>
    <div class="large-4 columns">
      <%= image_tag @post.meme.url(:medium) %>
    </div>
  <%end%>
  <div class="large-7 columns" id="post">
    <h4><%= @post.title %></h4>
    <div>
      <%= render :inline => @post.description %>
    </div>
    <div class="panel">
      <h5>Autor: </h5>
      <h6 class="subheader">Informacion del autor</h6>
      <a href="#" class="small button">Contactar</a>
    </div>
  </div>
</div>
<br>
<br>
<div class="row" id="talvez">
  <div class="large-12 columns">
    <hr>
    <h4>Tal vez te pueda interesar:</h4>
    <hr>
    <% Post.all.each do |post| %>
        <% if(!post.meme.blank?)%>
          <%= link_to image_tag(post.meme.url(:medium)), post %>
        <% end %>
    <%end%>
  </div>
</div>
